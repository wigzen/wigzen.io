    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-xs);
    margin-bottom: var(--spacing-sm);
    padding-left: var(--spacing-md);
  }

  .skill-category {
    font-weight: 600;
    color: var(--dark);
    margin-right: var(--spacing-xs);
  }

  /* Timeline styles */
  .timeline {
    position: relative;
    margin-left: 30px;
  }

  .timeline::before {
    content: "";
    position: absolute;
    top: 10px;
    bottom: 0;
    left: 0;
    width: 2px;
    background: var(--border);
  }

  /* Common timeline item styles */
  .timeline-item {
    position: relative;
    margin-bottom: var(--spacing-md);
    padding-left: var(--spacing-md);
    transition: all 0.3s ease;
  }

  .timeline-item::before {
    content: "";
    position: absolute;
    left: -8px;
    top: 6px;
    width: 16px;
    height: 16px;
    border-radius: 50%;
    background-color: white;
    border: 2px solid var(--accent);
    z-index: 1;
    transition: all 0.3s ease;
  }

  .timeline-item:hover::before {
    background-color: var(--accent);
  }

  .timeline-item:last-child {
    margin-bottom: 0;
  }

  /* Common header styles */
  .item-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: var(--spacing-xs);
    align-items: center;
  }

  .item-title {
    font-weight: 600;
    color: var(--primary);
    font-size: 1.05rem;
  }

  .item-date {
    color: var(--accent);
    font-size: 0.9rem;
    font-weight: 500;
  }

  /* Common description styles */
  .item-description {
    font-size: 0.95rem;
    color: var(--secondary);
    line-height: 1.6;
  }

  /* Common achievement styles */
  .achievement-text {
    padding: 0;
    margin-top: var(--spacing-xs);
    color: var(--secondary);
    font-size: 0.95rem;
  }

  .achievement-paragraph {
    margin-bottom: 0.75rem;
    transition: transform 0.2s ease;
  }

  .achievement-paragraph:hover {
    transform: translateX(2px);
  }

  .achievement-paragraph:last-child {
    margin-bottom: 0;
  }

  /* Common link styles */
  .item-link {
    text-decoration: none;
    padding: 0.25rem 0.75rem;
    background-color: rgba(14, 165, 233, 0.1);
    border-radius: 4px;
    transition: all 0.2s ease;
    color: var(--accent);
    font-size: 0.9rem;
    font-weight: 500;
  }

  .item-link:hover {
    background-color: rgba(14, 165, 233, 0.2);
    text-decoration: none;
  }

  /* Common summary styles */
  .item-summary {
    font-weight: 500;
    margin-bottom: 0.75rem;
    color: var(--primary);
    position: relative;
    display: inline-block;
  }

  .item-summary::after {
    content: "";
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 2rem;
    height: 2px;
    background-color: var(--accent);
    transition: width 0.3s ease;
  }

  .timeline-item:hover .item-summary::after {
    width: 100%;
  }

  .experience-company,
  .education-school {
    font-weight: 500;
    color: var(--secondary);
    margin-bottom: var(--spacing-xs);
  }

  .education-degree,
  .certification-name {
    font-weight: 600;
    color: var(--primary);
    margin-bottom: var(--spacing-xs);
  }

  .education-date,
  .certification-date {
    color: var(--secondary);
    font-size: 0.95rem;
  }

  @media print {
    body {
      padding: 0;
      background-color: white;
    }

    .container {
      box-shadow: none;
      max-width: 100%;
    }

    .header-right {
      display: none;
    }
  }

  @media (max-width: 768px) {
    body {
      padding: var(--spacing-sm);
    }

