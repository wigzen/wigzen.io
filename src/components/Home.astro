---
import Navbar from "./ui/Navbar.astro";
import Project from "./ui/Project.astro";
import ContactForm from "./ui/ContactForm.astro";

const projects = [
  {
    title: "E-commerce Redesign",
    description:
      "Complete UI/UX redesign of an e-commerce platform focusing on improved conversion rates and user experience.",
    tags: ["React", "Next.js", "Tailwind CSS"],
    image: "/images/projects/ecommerce.jpg",
    link: "#",
  },
  {
    title: "Finance Dashboard",
    description:
      "Interactive financial analytics dashboard with real-time data visualization and responsive design.",
    tags: ["Vue.js", "D3.js", "GSAP"],
    image: "/images/projects/finance.jpg",
    link: "#",
  },
  {
    title: "Travel App",
    description:
      "Mobile-first travel planning application with location-based recommendations and interactive maps.",
    tags: ["React Native", "Firebase", "Google Maps API"],
    image: "/images/projects/travel.jpg",
    link: "#",
  },
];

const skills = [
  {
    category: "Frontend",
    items: [
      "HTML/CSS",
      "JavaScript",
      "TypeScript",
      "React",
      "Vue.js",
      "Astro",
      "Next.js",
    ],
  },
  {
    category: "UI/UX",
    items: ["Figma", "Adobe XD", "User Research", "Wireframing", "Prototyping"],
  },
  {
    category: "Other",
    items: [
      "Git",
      "REST APIs",
      "Node.js",
      "GSAP Animations",
      "Responsive Design",
    ],
  },
];
---

<main class="main">
  <!-- Hero Section -->
  <section id="hero" class="hero">
    <h1 class="name">
      <span>Vikas</span>
      <br />
      <span>Lodh</span>
    </h1>
    <h4 class="title">
      <span>Frontend Developer</span>
      <br />
      <span>UI/UX Designer</span>
    </h4>
    <p class="intro">
      I create engaging digital experiences that combine beautiful design with
      solid technical implementation.
    </p>
    <div class="cta">
      <a href="#work" class="btn-primary">View My Work</a>
      <a href="#contact" class="btn-secondary">Get In Touch</a>
    </div>
    <div class="block">
      <div class="ui-background-lines"></div>
    </div>
  </section>

  <!-- Work Section -->
  <section id="work" class="work">
    <h2 class="section-title">Selected Work</h2>
    <div class="projects-grid">
      {
        projects.map((project) => (
          <Project
            title={project.title}
            description={project.description}
            tags={project.tags}
            image={project.image}
            link={project.link}
          />
        ))
      }
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="about">
    <h2 class="section-title">About Me</h2>
    <div class="about-content">
      <div class="about-image">
        <img src="/images/profile.jpg" alt="Vikas Lodh" />
      </div>
      <div class="about-text">
        <p>
          With over 5 years of experience in frontend development and UI/UX
          design, I specialize in creating intuitive and visually appealing
          digital experiences. My approach combines creative design thinking
          with technical expertise to build products that users love.
        </p>
        <p>
          I'm passionate about clean code, accessibility, and performance
          optimization. When I'm not coding, you can find me exploring design
          trends, contributing to open source, or hiking in the mountains.
        </p>

        <h3>Skills</h3>
        <div class="skills-container">
          {
            skills.map((skillGroup) => (
              <div class="skill-group">
                <h4>{skillGroup.category}</h4>
                <ul class="skill-list">
                  {skillGroup.items.map((skill) => (
                    <li>{skill}</li>
                  ))}
                </ul>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="contact">
    <h2 class="section-title">Get In Touch</h2>
    <div class="contact-container">
      <div class="contact-info">
        <p>
          I'm currently available for freelance work and collaborations. If you
          have a project in mind, or just want to say hello, feel free to reach
          out!
        </p>
        <div class="contact-details">
          <p><strong>Email:</strong> hello@vikaslodh.com</p>
          <p><strong>Location:</strong> Mumbai, India</p>
        </div>
        <div class="social-links">
          <a href="https://github.com/" target="_blank" rel="noopener">GitHub</a
          >
          <a href="https://linkedin.com/" target="_blank" rel="noopener"
            >LinkedIn</a
          >
          <a href="https://twitter.com/" target="_blank" rel="noopener"
            >Twitter</a
          >
        </div>
      </div>
      <ContactForm />
    </div>
  </section>

  <Navbar />
</main>

<style>
  :root {
    --nav-bg-color: #ededed;
    --nav-active-color: #000;
    --nav-text-color: #000;
    --nav-active-text-color: #fff;
  }

  /* Main section styles */
  .main {
    background-color: var(--clr-blackground);
    width: 100%;
    min-height: 100dvh;
    position: relative;
    padding-inline: var(--gutter);
  }

  .main::after,
  .main::before {
    content: "";
    position: absolute;
    height: 100%;
    width: 1px;
    background-color: var(--clr-gray);
    top: 0;
  }

  .main::before {
    right: var(--gutter);
  }

  .main::after {
    left: var(--gutter);
  }

  /* Hero section */
  .hero {
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-bottom: 5rem;
  }

  .name {
    letter-spacing: 1rem;
    padding-top: 0.5em;
    text-transform: uppercase;
    color: var(--clr-black);
    font-size: clamp(64px, 10vw, 128px);
    line-height: 1;
    margin-bottom: 1rem;
  }

  .name span {
    font-size: inherit;
    line-height: inherit;
    letter-spacing: inherit;
    text-transform: inherit;
  }

  .title {
    font-size: clamp(18px, 4vw, 24px);
    margin-bottom: 2rem;
    font-weight: 400;
  }

  .intro {
    max-width: 600px;
    margin-bottom: 2rem;
    font-size: 1.2rem;
    line-height: 1.6;
  }

  .cta {
    display: flex;
    gap: 1rem;
    margin-bottom: 3rem;
  }

  .btn-primary,
  .btn-secondary {
    padding: 0.8rem 1.5rem;
    border-radius: 2rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .btn-primary {
    background-color: var(--clr-black);
    color: white;
  }

  .btn-secondary {
    border: 1px solid var(--clr-black);
    color: var(--clr-black);
  }

  .block {
    border-block: 1px solid var(--clr-gray);
    width: 100%;
    height: 40px;
    position: relative;
  }

  /* Section styling */
  section {
    padding: 6rem 0;
  }

  .section-title {
    font-size: clamp(28px, 5vw, 42px);
    margin-bottom: 3rem;
    position: relative;
  }

  .section-title::after {
    content: "";
    position: absolute;
    bottom: -10px;
    left: 0;
    width: 60px;
    height: 4px;
    background-color: var(--clr-black);
  }

  /* Projects grid */
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2rem;
  }

  /* About section */
  .about-content {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 3rem;
  }

  .about-image img {
    width: 100%;
    border-radius: 4px;
  }

  .about-text p {
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .skills-container {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    margin-top: 1.5rem;
  }

  .skill-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    list-style: none;
    padding: 0;
  }

  .skill-list li {
    background-color: var(--nav-bg-color);
    padding: 0.4rem 0.8rem;
    border-radius: 1rem;
    font-size: 0.9rem;
  }

  /* Contact section */
  .contact-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-links a {
    text-decoration: none;
    color: var(--clr-black);
    position: relative;
    padding-bottom: 2px;
  }

  .social-links a::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 1px;
    background-color: var(--clr-black);
    transition: width 0.3s ease;
  }

  .social-links a:hover::after {
    width: 100%;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .about-content,
    .contact-container {
      grid-template-columns: 1fr;
    }
  }
</style>
