---
import Navbar from "./ui/Navbar.astro";
import Counter from "./solid/Counter";
import ContentTransition from "./ui/ContentTransition.astro";
import SplitText from "./ui/SplitText.astro";
import InteractiveDotGrid from "./ui/InteractiveDotGrid.astro";
---

<main class="main">
  <Navbar />
  <h1 class="name">
    <span>Vikas</span>
    <br />
    <span>Lodh</span>
  </h1>
  <div class="block">
    <div class="ui-background-lines"></div>
    <p class="subtitle">About Me</p>
  </div>
  <SplitText />
  <!-- <InteractiveDotGrid /> -->
  <!-- <Counter client:only="solid" /> -->
</main>

<script>
  setTimeout(() => {
    document.querySelector(".counter-container")?.remove();
  }, 2500);
</script>

<style>
  :root {
    --nav-bg-color: #ededed;
    --nav-active-color: #000;
    --nav-text-color: #000;
    --nav-active-text-color: #fff;
  }

  .subtitle {
    color: #3f3f3f;
    font-weight: 600;
    margin-top: 0.4em;
    font-size: 20px;
    line-height: 1;
  }
  /* Main section styles */
  .main {
    background-color: var(--clr-blackground);
    width: 100%;
    height: 100dvh;
    position: relative;
    padding-inline: var(--gutter);
  }

  .main::after,
  .main::before {
    content: "";
    position: absolute;
    height: 100%;
    width: 1px;
    background-color: var(--clr-gray);
    top: 0;
  }

  .main::before {
    right: var(--gutter);
  }

  .main::after {
    left: var(--gutter);
  }

  .name {
    letter-spacing: 1rem;
    padding-top: 0.5em;
    text-transform: uppercase;
    color: var(--clr-black);
    font-size: clamp(64px, 10vw, 128px);
    line-height: 1;
  }

  .name span {
    font-size: inherit;
    line-height: inherit;
    letter-spacing: inherit;
    text-transform: inherit;
  }

  .block {
    border-block: 1px solid var(--clr-gray);
    width: 100%;
    height: 40px;
    position: relative;
  }
</style>
